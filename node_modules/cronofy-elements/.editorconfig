# http://EditorConfig.org

# Top-most EditorConfig file
root = true

# Defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space

# Ruby files
[{Gemfile,*.{rake,rb}]
indent_size = 2
indent_style = space

# Javascript files
[*.js,*.json]
indent_size = 4
indent_style = space

[Makefile]
indent_style = tab
